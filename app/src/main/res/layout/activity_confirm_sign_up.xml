<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    android:layout_gravity="right"
    tools:context="com.asredade.qtoaprojectfirstdemo.ConfirmSignUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textSize="14sp"
        android:id="@+id/txtConfirmSignUp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/txtConfirmSignUp"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:layout_below="@+id/txtConfirmSignUp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"
            android:id="@+id/txtConfirmationNumber"
            android:hint="کد فعالسازی را وارد کنید" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="تایید"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirmCode"
        android:textStyle="normal|bold"
        android:background="@drawable/btnshape"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="btnConfirmCode_Clicked" />

</RelativeLayout>
